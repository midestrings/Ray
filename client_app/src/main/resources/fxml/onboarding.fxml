<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane prefHeight="600.0" prefWidth="1000.0" styleClass="container" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ray.app.controller.OnBoardingController">
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <VBox alignment="BASELINE_CENTER" prefHeight="600.0" prefWidth="500.0" style="-fx-background-color: #1E1E1E;" styleClass="left_vbox">
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="appName" text="RentMyRide">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
                <VBox.margin>
                    <Insets top="120.0" />
                </VBox.margin>
            </Text>
            <ImageView fx:id="image" fitHeight="200.0" fitWidth="450.0" pickOnBounds="true" preserveRatio="true">
                <VBox.margin>
                    <Insets top="50.0" />
                </VBox.margin>
                <image>
                    <Image url="@../assets/images/tesla.png" />
                </image>
            </ImageView>
            <TextFlow prefHeight="0.0" prefWidth="300.0">
                <VBox.margin>
                    <Insets />
                </VBox.margin>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome to RentMyRide! Our service lets you quickly and easily rent cars or hail rides from wherever you are.">
                    <font>
                        <Font size="10.0" />
                    </font>
                </Text>
            </TextFlow>
        </VBox>
        <VBox alignment="BASELINE_CENTER" prefHeight="600.0" prefWidth="500.0" styleClass="right_vbox" GridPane.columnIndex="1">
            <HBox alignment="BASELINE_RIGHT" prefHeight="23.0" prefWidth="300.0" />
         <Label alignment="CENTER" prefHeight="23.0" prefWidth="166.0" text="Get started" textFill="#222020">
            <font>
               <Font name="System Bold" size="16.0" />
            </font>
            <cursor>
               <ImageCursor fx:constant="HAND" />
            </cursor>
            <VBox.margin>
               <Insets top="150.0" />
            </VBox.margin>
         </Label>
            <JFXButton fx:id="ownerButton" prefWidth="250.0" style="-fx-background-color: #24292E; -fx-text-fill: white; -fx-background-radius: 5px;" text="Continue as a car owner">
            <VBox.margin>
               <Insets top="20.0" />
            </VBox.margin>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding></JFXButton>
         <JFXButton fx:id="clientButton" layoutX="35.0" layoutY="173.0" prefWidth="250.0" style="-fx-background-color: white; -fx-text-fill: #202223; -fx-border-color: #24292E; -fx-border-radius: 5px;" text="Continue as a client">
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <VBox.margin>
               <Insets top="20.0" />
            </VBox.margin>
         </JFXButton>
         <HBox alignment="TOP_CENTER" layoutX="10.0" layoutY="16.0" prefHeight="23.0" prefWidth="300.0">
            <children>
               <Label alignment="CENTER" layoutX="726.0" prefHeight="23.0" prefWidth="166.0" text="Already have an account?" textFill="#222020">
                  <font>
                     <Font size="12.0" />
                  </font>
                  <cursor>
                     <ImageCursor fx:constant="HAND" />
                  </cursor>
               </Label>
               <Label fx:id="login" alignment="CENTER" layoutX="77.0" layoutY="10.0" prefHeight="23.0" prefWidth="44.0" style="-fx-border-color: blue; -fx-border-style: solid; -fx-border-width: 0 0 1px 0;" text="Log in" textFill="BLUE">
                  <font>
                     <Font size="12.0" />
                  </font>
                  <cursor>
                     <ImageCursor fx:constant="HAND" />
                  </cursor>
               </Label>
            </children>
            <VBox.margin>
               <Insets top="30.0" />
            </VBox.margin>
         </HBox>
        </VBox>
    </children>
</GridPane>
